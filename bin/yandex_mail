#!/usr/bin/env ruby

if ARGV.length != 3
  puts "Usage: #{File.basename(__FILE__)} 'recipient' 'email subject' 'email body'"
  Process.exit
end

$LOAD_PATH.unshift File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'yandex_mail'

to = ARGV[0]
msg = ARGV[1]
txt = ARGV[2]

Yandex_mail.line(to, msg, txt).deliver
puts "\e[1;32m\OK: Email sent to : \e[1;31m\ #{to}"
